extends layout

block content
   h1 #{title)
   hr
   .container-fluid
      .row-fluid
         .col-md-1
            h2 1.
         .col-md-6
            blockquote
               | Swimming laps around a bottle of Louis the Thirteenth
               br
               | Jumpin' off of a mountain into a sea of Codeine
               br
               | I'm at the top of the top, but... still I climb
               br
               | And if I should ever fall, the ground would then turn to wine
               cite Lil Wayne on "I Feel Like Dying"
         .col-md-5
            iframe(width="420", height="315", src="//www.youtube.com/embed/vuyEgvCVYd8", frameborder="0", allowfullscreen)
      .row-fluid
         .col-md-12
            p.text-indent Test

   .container
      button#showCitations.btn.btn-default(style='display:none;') Show Citations ⇒
      #citations(style='display:none;')


block scripts
   script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
   script.
      $("#showCitations").show().click(function () {
         if ($("#citations").is(":hidden")) {
            $("#citations").fadeIn();
            $("#showCitations").text("Hide Citations ⇐");
         }
         else if ($("#citations").is(":visible")) {
            $("#citations").fadeOut();
            $("#showCitations").text("Show Citations ⇒");
         }
      });